<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ApplicationActivity">

    <EditText
        android:id="@+id/etPostDonationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:hint="Donation Title" />

    <EditText
        android:id="@+id/etGovId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPostDonationTitle"
        android:layout_centerHorizontal="true"
        android:hint="Gov ID" />

    <EditText
        android:id="@+id/etPostDonationDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etGovId"
        android:layout_centerHorizontal="true"
        android:hint="Donation Detail" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btPostDonate"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/etPostDonationDetail"
        android:text="POST"/>

</RelativeLayout>